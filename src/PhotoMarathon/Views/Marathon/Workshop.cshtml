@model PhotoMarathon.Data.Entities.Cms.Page
@{
    ViewData["Title"] = "Workshop-uri";
}

<main id="content" role="main">
    <div class="container">
        <div class="col-md-9">
            <div class="margin-3"></div>
            <div>
                <h4 class="ubuntu-font">@Model.Title</h4>
                <p>@Html.Raw(Model.Sections.FirstOrDefault(p=>p.Slug == "descriere").Content)</p>
            </div>
            @{ var tabs = Model.Sections.FirstOrDefault(p => p.Slug == "taburi").Articles.ToList();}
            <div class="tab-container vertical" id="work-shop-container">
                <ul class="tabs clearfix">
                @for (var i = 0; i < tabs.Count; i++)
                {
                    <li class="@(i == 0? "active" : "")"><a href="#tab-@i">@tabs[i].Title</a></li>
                }
                </ul>
                @for (var i = 0; i < tabs.Count; i++)
                {
                    <div id="tab-@i" class="tab_content" style="display: block">
                        <h5>@tabs[i].Subtitle</h5>
                        @Html.Raw(tabs[i].Content)
                        <p><a asp-action="Register" asp-controller="Account">Înscrie-te acum la @tabs[i].Title!</a>
                        </p>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-3">
            <img src="~/images/workshop/adi.jpg" class="img-responsive" />
            <div class="margin-1"></div>
            <img src="~/images/workshop/vlad2.jpg" class="img-responsive" />
            <div class="margin-1"></div>
            <img src="~/images/workshop/vlad.JPG" class="img-responsive" />
        </div>
    </div>
</main>

@section scripts{
    <script>
        $(document).ready(function () {
            Main.SetActiveMenuItem(3);
        })
    </script>
}