@model PhotoMarathon.Data.Entities.BlogItem
@{
    Layout = null;
}
<div class="box col-sm-8">
    <div class="post-box horizontal clearfix">
        <a href="~/blog/article/@Model.Slug" class="image-link"><img src="~/images/Blog/@Model.MainImageName" width="434" height="434" alt=""></a>
        <div class="extra-info">
            <p class="meta small">@((int)DateTime.Now.Subtract(Model.DateAdded).TotalDays) day(s) ago by <a href="#">@Model.CreatedBy</a></p>
            <h5 style="color:black;"><a href="~/blog/article/@Model.Slug">@Model.Title</a></h5>
        </div>
    </div>
</div>