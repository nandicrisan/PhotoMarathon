@model PhotoMarathon.Data.Entities.BlogItem
@{
    ViewData["Title"] = "Articol";
    if (Model.Title != null) {
        ViewData["Title"] = Model.Title;
    }
}

<main id="content" class="white-background" role="main">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <h2 class="single-title no-bottom" style="color:black;">@Model.Title</h2>
                <p class="post-meta"><span>@((int)DateTime.Now.Subtract(Model.DateAdded).TotalDays) Day(s) Ago, By <a href="#">@Model.CreatedBy</a></span></p>
                <p style="color:black;">@Model.ShortDescription</p>
            </div>
        </div>
        <div class="margin-4"></div>
        <img src="~/images/Blog/@Model.MainImageName" width="1170" height="670" alt="">
        <div class="margin-5"></div>
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2" style="color:black">
                @Html.Raw(Model.Content)
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div id="fb-root"></div>
                <script>
                    (function (d, s, id) {
                        var js, fjs = d.getElementsByTagName(s)[0];
                        if (d.getElementById(id)) return;
                        js = d.createElement(s); js.id = id;
                        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=283277232056928";
                        fjs.parentNode.insertBefore(js, fjs);
                    }(document, 'script', 'facebook-jssdk'));
                </script>
                <div class="fb-comments" data-href="http://photomarathon.ro/Blog/@Model.Id" data-width="100%" data-num-posts="3"></div>
            </div>
        </div>
    </div>
</main>