@model PhotoMarathon.Data.Entities.Photographer
@{
    ViewData["Title"] = "Înscriere";
    List<PhotoMarathon.Data.Entities.WorkShop> workShops = ViewBag.WorkShops;
}

<main id="content" role="main">
    <div class="container container-boxes">
        <div class="row">
            <div class="col-sm-12">
                <div class="box white-bg black-input">
                    <h3>Înscrie-te</h3>
                    <p>
                        Completează formularul și înscrie-te la competiția Photo Marathon, unde cele mai bune fotografii sunt premiate și promovate în cadrul expoziției Photo Marathon’16! Mai mult decât atât, poți participa și la workshop-urile special pregătite pentru tine!
                    </p>
                    <div class="sep red"></div>
                    <div class="margin-1"></div>
                    <form asp-controller="Account" asp-action="Register" method="post" class="no-bottom">
                        <label asp-for="FirstName" class="sr-only">Nume</label>
                        <input asp-for="FirstName" class="underline" placeholder="Nume">
                        <span asp-validation-for="FirstName" class="input-validation-side rubberBand"></span>
                        <label for="prename" class="sr-only">Prenume</label>
                        <input asp-for="LastName" class="underline" placeholder="Prenume">
                        <span asp-validation-for="LastName" class="input-validation-side"></span>
                        <label for="email" class="sr-only">Email</label>
                        <input asp-for="Email" class="underline" placeholder="Adresă de email">
                        <span asp-validation-for="Email" class="input-validation-side"></span>
                        <label for="phone" class="sr-only">Nr. de telefon</label>
                        <input asp-for="PhoneNumber" class="underline" placeholder="Nr. de telefon">
                        <span asp-validation-for="PhoneNumber" class="input-validation-side"></span>
                        <div class="margin-1"></div>
                        <p for="fotop" class="radio-label vertical-align-middle">Fotograf amator &nbsp;</p>
                        <input type="radio" class="radio-input" name="IsProfessionist" value="false" />
                        <p for="fotop" class="radio-label vertical-align-middle"> &nbsp;Fotograf profesionist &nbsp;</p>
                        <input type="radio" class="radio-input" name="IsProfessionist" value="true" />
                        <div class="margin-1"></div>
                        <p>Mă înscriu la:</p>

                        <p class="display-inline-block margin-bottom-none">Workshop &nbsp;</p>
                        <div class="squaredFour display-inline-block">
                            <input asp-for="RegisterForWorkShop" type="checkbox" value="true" id="workshop" name="check" />
                            <label for="workshop"></label>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6" id="workshops" style="display:none;">
                                <select class="form-control" name="WorkshopId">
                                    @foreach (var workShop in workShops)
                                    {
                                        <option value="@workShop.Id">@workShop.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <p class="display-inline-block">Maratonul foto &nbsp;</p>
                        <div class="squaredFour display-inline-block">
                            <input asp-for="RegisterForMarathon" type="checkbox" value="true" id="photoMarathon" name="check" />
                            <label for="photoMarathon"></label>
                        </div>
                        <br />
                        <div class="squaredFour display-inline-block">
                            <input asp-for="Rules" type="checkbox" id="rules" name="check" />
                            <label for="rules"></label>
                        </div>
                        <p class="display-inline-block">&nbsp; Am citit regulamentul concursului de <a asp-controller="Home" asp-action="Rules">aici</a> și sunt de acord cu toate condițiile.</p>

                        <br />
                        <div class="squaredFour display-inline-block">
                            <input asp-for="HasNewsLetter" type="checkbox" value="true" id="newsletter" name="check" />
                            <label for="newsletter"></label>
                        </div>
                        <p class="display-inline-block">&nbsp; Vreau să primesc și alte informatii legate de Photo Marathon 2016</p>
                        <span asp-validation-for="Rules" class="input-validation"></span>
                        <div class="margin-1"></div>
                        <input type="submit" value="Trimite">
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts
{
    <script src="~/js/Account/register.js" asp-append-version="true"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.1/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            Main.SetActiveMenuItem(5);
        })
    </script>
}